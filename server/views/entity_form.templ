package views

templ Formulario(){
	<form hx-post="/tasks" hx-target="#listaElementos" hx-swap="outerHTML">
        <div class="formBoxes">
            <p class="formText">Titulo</p>
            <input type="text" name="title" class="formInput" /><br />
        </div>

        <div class="formBoxes">
            <p class="formText">Descripci√≥n</p>
            <input type="text" name="description" class="formInput" maxlength="255" required /><br />
        </div>

        <div class="formCompleted">
            <p class="formText">Completada</p>
            <input type="checkbox" name="completed" value="true" class="checked" />
        </div>
        <button type="submit" class="boton">Enviar</button>
    </form>
}